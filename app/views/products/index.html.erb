<div class="jumbotron">
  <h1>Jeans for All of Us</h1>
  <p class="lead">Katya's Startup Institute Project</p>
</div>

<% @products.each_slice 3 do |row| %>
  <div class="row">
    <% row.each do |product| %>
      <div class="col-md-4" %>

        <div class="panel panel-default">
          <div class="panel-body">

            <div class="media">
              <div class="media-left">
                <%= image_tag product.photo.thumb.url, width: "100" %>
              </div>
              <div class="media-body">
                <h4 class="media-heading"><%= product.name %></h4>
                <p>The description goes here.</p>
              </div>
            </div>


          </div> <!-- panel-body -->
          <div class="panel-footer">
            <div class="row">
              <div class="col-xs-6">
                <strong class="lead"><%= number_to_currency product.price %></strong>
              </div>
              <div class="col-xs-6 text-right">
                <div class="btn-group">
                  <%= link_to "More info", product, class: "btn btn-primary" %>
                  <%= link_to add_to_cart_path(product_id: product.id), method: "post", remote: true, class: "btn btn-primary" do %>
                    <span class="glyphicon glyphicon-shopping-cart"></span>
                  <% end %>
                </div>
              </div>
            </div>
          </div> <!-- panel-footer -->
        </div> <!-- panel -->
      </div>
    <% end %>
  </div>
<% end %>
